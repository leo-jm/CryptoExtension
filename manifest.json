{
  "manifest_version": 2,
  "name": "PayWithCrypto",
  "description": "Google Chrome Extension that allows you to easily pay with cryptocurrency all in one tab",
  "version": "0.0.1",
  "options_page":"settings.html",
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
	"default_title": "PayWithCrypto"
  },
  
  "permissions": [
    "activeTab",
	"tabs",
    "storage"
  ]
}